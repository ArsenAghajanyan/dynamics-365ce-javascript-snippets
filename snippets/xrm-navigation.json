                "\t\t\tconsole.log(\"Dialog closed using OK button.\");",
                "\t\t\t$0",
                "\t\t} else {",
                "\t\t\tconsole.log(\"Dialog closed using Cancel button or X.\");",
                "\t\t}",
                "\t},",
                "\tfunction (error) {",
                "\t\tconsole.log(error.message);",
                "\t\t// handle error conditions",
                "\t}",
                ");"
